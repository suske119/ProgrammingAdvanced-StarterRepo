    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:VoorbeeldOrders.Views"
    xmlns:local="clr-namespace:VoorbeeldOrders" Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Werknemers (select)">
            <ShellContent Title="Werknemers (select)" ContentTemplate="{DataTemplate views:WerknemersPage}" Route="WerknemersPage" />
        </Tab>
        <Tab Title="Orders (select met joins)">
            <ShellContent Title="Orders (select met joins)" ContentTemplate="{DataTemplate views:OrdersPage}" Route="OrdersPage" />
        </Tab>
    </TabBar>
